package finalServer;

import java.io.*;
import java.net.*;
import java.util.*;

public class Server {

	class DoctorInfo{
		String account;
		String name;
		String department;
		int waitCount;
		ArrayList<String> patientQueue=new ArrayList<String>();
		
	}
	class medicineInfo{
		String name;
		int count;
		int price;
	}
	
	
	ServerSocket server;
	static Socket charge;
	static Socket store;
	
	BufferedReader br;
	BufferedWriter bw;
	static int internalCount;//内科排队人数
	static int surgeryCount; //外科排队人数
	static public HashMap<String,Socket> doctorSocket =new HashMap<String,Socket>();
	static public ArrayList<DoctorInfo> onlineDoctor=new ArrayList<DoctorInfo>();
	
	
	
	
	
	
	
	
	
	
	
	Server(){
		
		try {
		    server=new ServerSocket(8000);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}	
	
	public void openServer(){
		Socket client;
		while(true){  //死循环，一直等待socket连接
			try {
				client=server.accept();  
				addSoket(client);     //添加连接的socket
				
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			
		}
	}
		

	private void addSoket(Socket client) {
		try {
			//info=类型，账号，密码，
			br = new BufferedReader(new InputStreamReader(client.getInputStream()));
			String info=br.readLine();
			 analysis(info,client);  //分析登录的信息
			
		} catch (IOException e) {
			  //连接失败
			e.printStackTrace();
		}
		
	}
	
	public void analysis(String info, Socket client){
		
		String[] string=info.split(",");
		String account=string[1];
		String password=string[2];
		
		login(account,password);// 登录，如果账号密码正确，则进入下一步开始线程
		
		if(string[0].equals("charge")){
			charge=client;
			new ChargeThread(client).start();
			
		}		
		else if(string[0].equals("dotor")){
			doctorSocket.put(string[1], client);
			new DoctorThread(client).start();  //开启医生线程
		}
		else if(string[0].equals("store")){
			store=client;
			new StoreThread(client).start();
		}
		
	}
	
	private void login(String account, String password) {
		// TODO Auto-generated method stub
		
	}
	
	public static void main(String[] args) {
		Server server=new Server();
		server.openServer();  //打开服务器

	}

}

